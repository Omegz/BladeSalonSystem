{
  "version": 2,

  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",   
      "config": {
        "buildCommand": "bun run build",
        "distDir": "dist/public"
      }
    }
  ],
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@18"
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
