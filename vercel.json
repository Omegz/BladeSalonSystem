{
  "version": 2,

  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build@2.8.5",   
      "config": {
        "buildCommand": "bun run build",
        "distDir": "dist/public"
      }
    },
  {
    "src": "api/index.js",
    "use": "@vercel/node@3.0.1"            
  }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
